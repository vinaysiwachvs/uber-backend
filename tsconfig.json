{
	"compilerOptions": {
		"target": "es2022",
		"lib": ["ES2022"],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./dist",
		"rootDir": "src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"]
}
